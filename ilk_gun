//İkinci Örnek:
string ad,soyad;
Console.WriteLine("Adınız Nedir?");
ad=Console.ReadLine();
Console.WriteLine("Soyadınız Nedir?");
soyad=Console.ReadLine();
Console.WriteLine("Hoş Geldin" +" "+ ad +" "+ soyad);
Console.ReadKey();
//readkey , kullanmayınca da çalışır.
