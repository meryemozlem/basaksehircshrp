//İlk Örnek: Hoca string ad=Console.ReadLine(); gibi her değişkeni tek tek tanımlamak yerine ilk başta hepsini tanımlayıp ilerliyor.
string ad;
Console.WriteLine("Adınızı Giriniz : ");
ad = Console.ReadLine();
Console.WriteLine("Merhaba " + ad);
Console.ReadKey();
